{
  "name": "ccgram",
  "version": "1.0.0",
  "description": "Control Claude Code from Telegram",
  "main": "dist/workspace-telegram-bot.js",
  "bin": {
    "ccgram": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "config/",
    "src/types/",
    "ccgram.service",
    ".env.example",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "node dist/workspace-telegram-bot.js",
    "setup": "node dist/setup.js",
    "config": "node dist/src/tools/config-manager.js",
    "daemon:start": "node dist/claude-remote.js daemon start",
    "daemon:stop": "node dist/claude-remote.js daemon stop",
    "daemon:status": "node dist/claude-remote.js daemon status",
    "relay:pty": "node dist/start-relay-pty.js",
    "relay:start": "INJECTION_MODE=pty node dist/src/relay/relay-pty.js",
    "telegram": "node dist/start-telegram-webhook.js",
    "line": "node dist/start-line-webhook.js",
    "webhooks": "node dist/start-all-webhooks.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ccgram",
    "claude-code",
    "telegram-bot",
    "remote-control",
    "ai-coding",
    "developer-tools",
    "claude",
    "anthropic"
  ],
  "author": "JS Ayubi",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jsayubi/ccgram.git"
  },
  "bugs": {
    "url": "https://github.com/jsayubi/ccgram/issues"
  },
  "homepage": "https://ccgram.com",
  "dependencies": {
    "dotenv": "^17.2.1"
  },
  "optionalDependencies": {
    "express": "^4.18.2",
    "mailparser": "^3.7.4",
    "node-imap": "^0.9.6",
    "node-pty": "^1.0.0",
    "nodemailer": "^7.0.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "~22.15.0",
    "typescript": "~5.7.3",
    "vitest": "^4.0.18"
  }
}
